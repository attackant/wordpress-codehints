http://www.gnu.org/licenses/gpl-3.0.txt
	]]>
	</license-agreement>

	<files>
		<file source="DreamweaverWordPressCodeHints.xml" destination="$dreamweaver/Configuration/CodeHints" file-type="ordinary" />
	</files>

	<signatures>
		<signature name="WordPress Code Hinting for Dreamweaver" extensiontype="0" signed="true" certificateType="0" publisher="Mindshare Sudios Incorporated" />
	</signatures>

</macromedia-extension>