<macromedia-extension
	 name="WordPress Code Hinting for Dreamweaver"
	 version="1.0.1"
	 type="codehint codesnippet"
	 force-quit="true"
	 locked="false"
	 pkgtype="zxp">

	<author name="Mindshare Sudios, Inc." />

	<update url="http://wordpress-codehints.googlecode.com/svn/trunk/update-info.xml" />

	<products>
		<product name="Dreamweaver" version="8" primary="true" required="true" />
	</products>

	<description>
	<![CDATA[
	WordPress Code Hinting for Dreamweaver
	]]>
	</description>
	
	<ui-access>
	<![CDATA[
	In Dreamweaver go to <b>Edit > Preferences > Code Hints</b><br>
	and check the box next to "WordPress Code Hints".
	]]>
	</ui-access>

